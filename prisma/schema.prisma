generator client {
  provider = "prisma-client-js"
}

datasource grupoMorizDB {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barn {
  id                     Int                   @id @default(autoincrement())
  name                   String
  siloId                 Int?                  @unique
  environmentalMetricsId Int?                  @unique
  environmentalMetrics   EnvironmentalMetrics? @relation(fields: [environmentalMetricsId], references: [id])
  silo                   Silo?                 @relation(fields: [siloId], references: [id])

  @@map("barn")
}

model Silo {
  id         Int             @id @default(autoincrement())
  name       String
  sensorCode String
  barn       Barn?
  levelData  SiloLevelData[]

  @@map("silo")
}

model SiloLevelData {
  id         BigInt   @id @default(autoincrement())
  levelValue Decimal
  timestamp  DateTime @default(now())
  siloId     Int
  silo       Silo     @relation(fields: [siloId], references: [id], onDelete: Cascade)

  @@map("silo_level_data")
}

model EnvironmentalMetrics {
  id         Int                 @id @default(autoincrement())
  name       String
  sensorCode String
  barn       Barn?
  data       EnvironmentalData[]

  @@map("environmental_metrics")
}

model EnvironmentalData {
  id          BigInt               @id @default(autoincrement())
  temperature Decimal
  humidity    Decimal
  timestamp   DateTime             @default(now())
  metricsId   Int
  metrics     EnvironmentalMetrics @relation(fields: [metricsId], references: [id], onDelete: Cascade)

  @@map("environmental_data")
}
